 @model OrderHeader 

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header  text-light py-4" style="background-color: #1a1a1a">
            <h3 class="text-center text-white">Order Confirmation</h3>
        </div>
        <div class="card-body text-center">
            <h1 class="text-success">Payment Successful!</h1>

            <div class="check-container my-4">
                <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                    <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                    <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16" />
                </svg>
            </div>

            <h3 class="mt-3">Thank you for your order @Model.Name,</h3>
            <p>Order Number: <strong>@Model.Id</strong></p>
            <p>Total Amount: <strong>$@Model.OrderTotal</strong></p>
            @if(Model.Product.IsProduct) {
                <p>Product: <strong>@Model.Product.ProductName</strong></p>
            }
            else {
            <p>Service: <strong>@Model.Product.ProductName</strong></p>
            }

            <a href="/" class="btn btn-primary mt-4">Continue Shopping</a>
        </div>
    </div>
</div>