@model IEnumerable<Product>

<div class="container">
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="row p-2 w-100">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded h-100 d-flex flex-column">
                            <img src="~/img/@product.ProductImage" class="card-img-top rounded" style="height: 300px; object-fit: cover; width: 100%;" />
                            <div class="card-body d-flex flex-column flex-grow-1">
                                <div class="text-center">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase">@product.ProductName</p>
                                </div>
                                <div class="mt-auto">
                                    <p class="text-dark text-opacity-75 text-center mb-0">
                                        Price:
                                        <span>@product.ProductPrice.ToString("c")</span>
                                    </p>
                                </div>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-productId="@product.ProductId" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

