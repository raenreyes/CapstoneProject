@model List<Ticket>

<div class="container mt-4">
    <h1 class="text-center">Your tickets</h1>
    
    <div class="d-none d-md-block">
        <!-- Show Table on Medium and Larger Screens -->
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Created At</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketId</td>
                        <td>@ticket.Title</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.Category</td>
                        <td>@ticket.PriorityLevel</td>
                        <td>@ticket.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (ticket.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-md-none">
        <!-- Show Cards on Small Screens -->
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title"><strong>@ticket.Title</strong></h5>
                            <h6 class="text-muted">ID: @ticket.TicketId</h6>
                            <p class="card-text"><strong>Description:</strong> @ticket.Description</p>
                            <p class="card-text"><strong>Category:</strong> @ticket.Category</p>
                            <p class="card-text"><strong>Priority Level:</strong> @ticket.PriorityLevel</p>
                            <p class="card-text">
                                <strong>Status:</strong>
                                @if (ticket.IsCompleted)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>