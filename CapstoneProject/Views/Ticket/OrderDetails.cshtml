@model List<OrderDetail>

<div class="container mt-4">
    <h1 class="text-center">Order Details</h1>
    <div class="d-none d-md-block">
        <!-- Show Table on Medium and Larger Screens -->
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>OrderId</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.OrderHeaderId</td>
                        <td>@ticket.Product.ProductName</td>
                        <td>@ticket.Product.ProductPrice.ToString("c")</td>
                        <td>@ticket.Count</td>
                        <td>@ticket.Price.ToString("c")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-md-none">
        <!-- Show Cards on Small Screens -->
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title"><strong>OrderId: @ticket.OrderHeaderId</strong></h5>
                            <h6 class="text-muted">Product: @ticket.Product.ProductName</h6>
                            <p class="card-text"><strong>Quantity:</strong> @ticket.Count</p>
                            <p class="card-text"><strong>Total:</strong> @ticket.Price.ToString("c")</p>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-12 text-end">
        <a asp-action="Orders" class="btn btn-danger btn-sm">Back</a>
    </div>
</div>